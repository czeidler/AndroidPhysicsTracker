<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adjust the frame rate (if needed):"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/frameRateImageView"
        android:layout_toLeftOf="@+id/frameRateImageView"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameRateImageView"
        android:src="@drawable/ic_help_arrow_right"
        android:layout_marginRight="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rangeImageView"
        android:layout_marginLeft="280dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/ic_help_arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select video analysis start and end points:"
        android:id="@+id/rangeTextView"
        android:layout_above="@+id/rangeImageView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp" />

</RelativeLayout>