<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_row="1" android:layout_column="0" android:layout_rowSpan="6">
        <view android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              class="nz.ac.aucklanduni.physics.tracker.TableView" android:id="@+id/dataTable" android:focusable="false"/>
    </ScrollView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter y speed [m/s]:"
            android:id="@+id/textView" android:layout_row="0" android:layout_column="1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="at time1"
            android:id="@+id/textViewTime1" android:layout_row="1" android:layout_column="1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="at time 2"
            android:id="@+id/textViewTime2" android:layout_row="2" android:layout_column="1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/editTextTime1" android:layout_row="1" android:layout_column="2" android:numeric="signed|decimal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/editTextTime2" android:layout_row="2" android:layout_column="2" android:numeric="signed|decimal"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_row="1" android:layout_column="3" android:layout_rowSpan="6">
        <view android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              class="nz.ac.aucklanduni.physics.tracker.TableView" android:id="@+id/speedTable" android:focusable="false"/>
    </ScrollView>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/buttonOk" android:layout_row="5" android:layout_column="2"/>

</GridLayout>