<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            android:id="@+id/recordButton"
            android:layout_above="@+id/newButton"
            android:layout_alignParentStart="true"
            android:src="@drawable/media_record"
            android:background="@android:color/transparent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/stopButton"
            android:layout_above="@+id/newButton"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:src="@drawable/media_stop"
            android:background="@android:color/transparent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discard"
            android:id="@+id/newButton"
            android:layout_marginBottom="160dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_media_discard"
            android:background="@android:color/transparent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/recordButton"
            android:id="@+id/linearLayout" android:layout_toLeftOf="@+id/newButton">
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center">
            <view class="nz.ac.aucklanduni.physics.tracker.views.RatioSurfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/surfaceView"
                    android:layout_gravity="center"/>
            <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/videoView"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>