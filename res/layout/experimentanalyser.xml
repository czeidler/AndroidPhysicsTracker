<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/experimentRunLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_above="@+id/experimentRunViewControl" android:layout_below="@+id/markerTableView">
    </RelativeLayout>
    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="com.example.AndroidPhysicsTracker.ExperimentRunViewControl" android:id="@+id/experimentRunViewControl"
          android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true" android:orientation="horizontal"/>
    <view android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          class="com.example.AndroidPhysicsTracker.TableView" android:id="@+id/markerTableView"
          android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>