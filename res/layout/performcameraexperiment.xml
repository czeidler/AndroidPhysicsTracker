<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <SurfaceView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/surfaceView"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/recordButton" android:layout_alignRight="@+id/videoView"
            android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            android:id="@+id/recordButton"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/stopButton"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"/>
    <VideoView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoView" android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/recordButton"
            android:layout_toLeftOf="@+id/stopButton" android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:id="@+id/newButton" android:layout_below="@+id/stopButton"
            android:layout_toRightOf="@+id/surfaceView"/>
</RelativeLayout>